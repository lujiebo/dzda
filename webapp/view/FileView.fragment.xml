<core:FragmentDefinition xmlns:html="http://www.w3.org/1999/xhtml" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	height="100%">
	<Table id="MyFile" width="500px" noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}"
		growing="true" growingScrollToLoad="true" updateFinished=".onUpdateFinished" selectionChange="selectionChange" mode="Delete"
		delete="onDeleteFile" items="{ path: 'MyFile>/' }">
		<columns>
			<Column id="FILENAME"  width="200px" demandPopin="true">
				<Text text="文件名"/>
			</Column>
			<Column id="FILETYPE" width="100px" demandPopin="true">
				<Text text="文件种类"/>
			</Column>			
			<Column id="MIMETYPE"  width="100px" demandPopin="true">
				<Text text="文件类型"/>
			</Column>
			<Column id="SYDATE" width="100px" demandPopin="true">
				<Text text="上传日期"/>
			</Column>
			<Column id="SYTIME" width="100px"  demandPopin="true">
				<Text text="上传时间"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem press="onDisplayItem2" id="cliFile" type="Active">
				<cells>
					<Text text="{MyFile>FILENAME}"/>
					<Text text="{MyFile>PRE_FILETYPE}"/>
					<Text text="{MyFile>MIMETYPE}"/>
					<Text text="{MyFile>SYDATE}"/>
					<Text text="{MyFile>SYTIME}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>